{
  "name": "@mkholt/pdf-thumbnail",
  "version": "1.0.1",
  "description": "React wrapper around PDF-js allowing creation of thumbnails both server and client side",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "github:mkholt/pdf-thumbnail"
  },
  "files": [
    "dist/*"
  ],
  "author": "Morten Holt <mho@delegate.dk>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preversion": "yarn test run",
    "prepack": "yarn build",
    
    "prebuild": "rimraf dist",
    "build": "tsc",
    
    "postversion": "git push --tags && x-var yarn publish --access public --new-version $npm_package_version . && git push",
    
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^2.1.3",
    "@vitest/ui": "^2.1.3",
    "jsdom": "^25.0.1",
    "msw": "^2.4.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3",
    "x-var": "^2.0.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@mkholt/utilities": "^1.0.2",
    "canvas": "^2.11.2",
    "pdfjs-dist": "4.x"
  }
}
